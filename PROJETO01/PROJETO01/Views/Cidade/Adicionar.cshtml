@model PROJETO01.Modelos.Cidade

<form asp-controller="Cidade" asp-action="AdicionarConfirmacao" method="post">
    <div class="mb-3">
        <label for="IdCidade" class="form-label">IdCidade:</label>
        <input asp-for="IdCidade" type="text" class="form-control" placeholder="Digite o Id da cidade" />
    </div>
    <div class="mb-3">
        <label for="UF" class="form-label">UF:</label>
        <input asp-for="UF" type="text" class="form-control" placeholder="Digite o Uf da cidade" />
    </div>
    <div class="mb-3">
        <label for="Nome" class="form-label">Nome:</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome da cidade" />
    </div>

    <hr />

    <a href="#" class="btn btn-secondary" onclick="javascript:history.back()">
        VOLTAR
    </a>

    <button type="submit" class="btn btn-success float-right">
        SALVAR
    </button>

</form>