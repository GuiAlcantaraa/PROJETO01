@model List<PROJETO01.Modelos.SolicitarCorte>


    <h3 class="mt-3">
        CADASTRO DE CORTES
        <a class="btn btn-sm btn-primary float-right" href="/SolicitaCorte/Adicionar">
            + ADICIONAR
        </a>
    </h3>

    <table class="table table-hover ">
        <thead id="theadPosition">
            <tr id="size">
                <th>IdSolicitacao</th>
                <th>Cliente</th>
                <th>Barbeiro</th>
                <th>Cidade</th>
                <th>Preço corte</th>
                <th>Logradouro</th>
                <th>Bairro</th>
                <th>Complemento</th>
                <th>Numero</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.IdSolicitacao</td>
                    <td>@item.IdCliente</td>
                    <td>@item.IdBarbeiro</td>
                    <td>@item.IdCidade</td>
                    <td>@item.PrecoCorte</td>
                    <td>@item.Logradouro</td>
                    <td>@item.Bairro</td>
                    <td>@item.Complemento</td>
                    <td>@item.Numero</td>

                    <td>
                        <a href="/SolicitaCorte/Editar?IdSolicitacao=@item.IdSolicitacao" class="btn btn-sm btn-warning">
                            Editar
                        </a>
                        <a href="/SolicitaCorte/Excluir?IdSolicitacao=@item.IdSolicitacao" class="btn btn-sm btn-danger">
                            Excluir  
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>