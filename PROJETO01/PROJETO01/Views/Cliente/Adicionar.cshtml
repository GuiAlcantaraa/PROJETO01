@model PROJETO01.Modelos.Cliente


<form asp-controller="Cliente" asp-action="AdicionarConfirmacao" method="post">
    <div class="mb-3 mt-4">
        <label for="IdCliente" class="form-label">IdCliente:</label>
        <input asp-for="IdCliente" type="text" class="form-control" placeholder="Digite o Id" />
    </div>

    <div class="mb-3">
        <label for="Nome" class="form-label">Nome:</label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="Digite o nome" />
    </div>

    <div class="mb-3">
        <label for="Cpf" class="form-label">Cpf:</label>
        <input asp-for="Cpf" type="text" class="form-control" placeholder="Digite o cpf" />
    </div>

    <div class="mb-3">
        <label for="Sexo" class="form-label">Sexo:</label>
        <input asp-for="Sexo" type="text" class="form-control" placeholder="Digite o sexo" />
    </div>

    <div class="mb-3">
        <label for="Telefone" class="form-label">Telefone:</label>
        <input asp-for="Telefone" type="text" class="form-control" placeholder="Digite o telefone" />
    </div>


    <div class="mb-3">
        <label for="Cep" class="form-label">Cep:</label>
        <input asp-for="Cep" type="text" class="form-control" placeholder="Digite o cep" />
    </div>


    <div class="mb-3">
        <label for="Logradouro" class="form-label">Logradouro:</label>
        <input asp-for="Logradouro" type="text" class="form-control" placeholder="Digite o Logradouro" />
    </div>

    <div class="mb-3">
        <label for="Complemento" class="form-label">Complemento:</label>
        <input asp-for="Complemento" type="text" class="form-control" placeholder="Digite o Complemento" />
    </div>

    <div class="mb-3">
        <label for="Bairro" class="form-label">Bairro:</label>
        <input asp-for="Bairro" type="text" class="form-control" placeholder="Digite o Bairro" />
    </div>

    <div class="mb-3">
        <label for="Numero" class="form-label">Numero:</label>
        <input asp-for="Numero" type="text" class="form-control" placeholder="Digite o Numero" />
    </div>


    <div class="mb-3">
        <label for="IdCidade" class="form-label">Cidade:</label>
         @Html.DropDownListFor(
               item => item.IdCidade,
               new SelectList(ViewBag.Cidade, "IdCidade", "Nome"),
               "-- Selecione --",
               new { @class = "form-control" }
           )
    </div>


    <hr />

    <a href="#" class="btn btn-secondary" onclick="javascript:history.back()">
        VOLTAR
    </a>

    <button type="submit" class="btn btn-success float-right">
        SALVAR
    </button>

    

</form>

